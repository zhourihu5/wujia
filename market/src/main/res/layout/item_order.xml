<?xml version="1.0" encoding="utf-8"?>
<!--<com.wujia.lib.widget.ShadowContainer -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="468dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius_shape"
        android:orientation="vertical"
        android:padding="27dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView android:id="@+id/tvToptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="付款剩余时间："
                android:textColor="#ff888888"
                android:textSize="16sp"
                />
            <TextView android:id="@+id/tvTimeToEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="00:14:30"
                android:textColor="#C8AC88"
                android:textSize="16sp"
                />
            <TextView android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="待付款"
                android:textColor="@color/order_status"
                android:textSize="16sp"
                />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="21dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">
            <ImageView android:id="@+id/ivCover"
                android:layout_width="77dp"
                android:layout_height="77dp"
                tools:src="@mipmap/btn_safe_hangup"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="颈枕/眼罩/收纳好物 早春出游 轻装上阵"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView android:id="@+id/tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ffc8ac88"
                        android:textSize="16sp"
                        />
                    <TextView android:id="@+id/tvPriceInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19"
                        android:textColor="#ffc8ac88"
                        android:textSize="25sp"
                        />
                    <TextView android:id="@+id/tvFloat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=".99"
                        android:textColor="#ffc8ac88"
                        android:textSize="19sp"
                        />
                    <TextView android:id="@+id/tvPriceOld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="￥16.8"
                        android:textColor="#ff888888"
                        android:textSize="19sp"
                        android:layout_marginLeft="13dp"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginBottom="21dp"/>
        <TextView android:id="@+id/tvToPay"
            android:layout_width="99dp"
            android:layout_height="32dp"
            android:background="@drawable/go_group_buy_bg"
            android:text="立即付款"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            android:gravity="center"/>
        <TextView android:id="@+id/tvAskDilivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="联系送货人"
            android:textColor="#ffba9c77"
            android:textSize="13sp"
            android:gravity="center"/>
        <TextView android:id="@+id/tvGoStroll"
            android:layout_width="99dp"
            android:layout_height="32dp"
            android:background="@drawable/link_dilivery_bg"
            android:text="去逛逛"
            android:textColor="#ffba9c77"
            android:textSize="13sp"
            android:gravity="center"/>


    </LinearLayout>
</LinearLayout>
