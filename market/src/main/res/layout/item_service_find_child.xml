<?xml version="1.0" encoding="utf-8"?>
<com.wujia.lib.widget.ShadowContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->
    <LinearLayout
        android:layout_width="213dp"
        android:layout_height="299dp"
        android:background="@drawable/bg_white_radius_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@id/img1"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginTop="33dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/img_sucai" />

        <TextView
            android:id="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="链家地产"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/c3"
            android:textSize="21sp" />

        <TextView
            android:id="@id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:text="中介机构\n将府公园店"
            android:textColor="@color/c8"
            android:textSize="13sp" />

        <TextView
            android:id="@id/btn1"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_rect_accent_select"
            android:gravity="center"
            android:text="@string/subscribe"
            android:textColor="@color/white"
            android:textSize="@dimen/text25" />

        <TextView
            android:id="@id/btn2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="@drawable/btn_rect_no_can"
            android:gravity="center"
            android:text="@string/subscribe"
            android:textColor="@color/white"
            android:textSize="@dimen/text22" />

    </LinearLayout>
</com.wujia.lib.widget.ShadowContainer>
