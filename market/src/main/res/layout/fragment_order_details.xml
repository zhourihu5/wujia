<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/bg_white_radius_shape"
        android:backgroundTint="@color/c5f"
        android:gravity="center"
        android:text="订单状态： 订单未支付，等待付款"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="53dp"
            android:background="@drawable/bg_white_radius_shape"
            android:orientation="vertical"
            android:paddingLeft="41dp"
            android:paddingTop="19dp"
            android:paddingRight="41dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/img1"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/bg_accent_circle_shape" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_weight="1"
                    android:text="每日优鲜"
                    android:textColor="@color/c3"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@id/btn1"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@mipmap/icon_chat_call" />

                <ImageView
                    android:id="@id/btn2"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="17dp"
                    android:src="@mipmap/icon_family_order_news" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_order_goods" />

        </LinearLayout>


        <!--right-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_weight="0.72"
            android:background="@drawable/bg_white_radius_shape"
            android:orientation="vertical"
            android:paddingTop="35dp"
            android:paddingBottom="41dp">

            <TextView
                android:id="@id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="@string/order_details"
                android:textColor="@color/c3"
                android:textSize="25sp" />

            <TextView
                android:id="@id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="35dp"
                android:text="订单编号：10847200109847502"
                android:textColor="@color/c8"
                android:textSize="19sp" />

            <TextView
                android:id="@id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="9dp"
                android:text="下单时间：2019-10-23"
                android:textColor="@color/c8"
                android:textSize="19sp" />

            <TextView
                android:id="@id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="9dp"
                android:text="商品总额：¥206"
                android:textColor="@color/c8"
                android:textSize="19sp" />

            <TextView
                android:layout_marginTop="9dp"

                android:id="@id/tv6"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:paddingLeft="45dp"
                android:background="@color/cf5"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:text="配送地址： \n榴莲养乐多 一期3号楼1单元303室 "
                android:textColor="@color/c8"
                android:textSize="19sp" />

            <TextView
                android:id="@id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="23dp"
                android:text="预计可获得206积分"
                android:textColor="@color/colorAccent"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_marginLeft="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付总额："
                    android:textColor="@color/c8"
                    android:textSize="21sp" />

                <TextView
                    android:id="@id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="¥206"
                    android:textColor="@color/colorAccent"
                    android:textSize="21sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn3"
                android:layout_width="263dp"
                android:layout_height="59dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="@dimen/px64"
                android:background="@drawable/btn_rect_accent_select"
                android:gravity="center"
                android:text="@string/now_pay"
                android:textColor="@color/white"
                android:textSize="@dimen/text29" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>