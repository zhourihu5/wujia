<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px124"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back_nav"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px80"
            android:paddingRight="@dimen/px80"
            android:text="@string/back_my_service"
            android:textColor="@color/c53"
            android:textSize="@dimen/text24" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@id/btn1"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/find_icon_search" />

        <ImageView
            android:id="@id/btn2"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/icon_market_nav_order" />

        <ImageView
            android:id="@id/btn3"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:layout_marginRight="54dp"
            android:scaleType="center"
            android:src="@mipmap/icon_market_nav_weibiaoti" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@id/img1"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:background="@mipmap/img_details_banner" />

            <com.wujia.lib.widget.ShadowContainer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="-222dp"
                android:layout_marginRight="45dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_radius_shape"
                    android:padding="31dp">

                    <ImageView
                        android:id="@id/img2"
                        android:layout_width="170dp"
                        android:layout_height="145dp"
                        android:layout_marginRight="27dp"
                        android:background="@mipmap/img_details_shop" />

                    <TextView
                        android:id="@id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img2"
                        android:text="就三桌涮肉馆"
                        android:textColor="@color/c3"
                        android:textSize="27sp" />

                    <LinearLayout
                        android:id="@id/l1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/img2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RatingBar
                            android:id="@id/rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="#F5A623"
                            android:rating="5" />

                        <TextView
                            android:id="@id/tv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="¥100/人"
                            android:textColor="@color/c53"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l1"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img2"
                        android:text="口味：9.1 环境：8.8 服务：9.0"
                        android:textColor="@color/c9"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv4"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/img2"
                        android:src="@mipmap/icon_market_details_position" />

                    <TextView
                        android:id="@id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv4"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/img3"
                        android:gravity="center"
                        android:text="草场地艺术区114号村委会西"
                        android:textColor="@color/c53"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv7"
                        android:layout_alignBottom="@id/img2"
                        android:text="据您步行300米，需要5分钟"
                        android:textColor="@color/c8" />

                    <TextView
                        android:id="@id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/icon_market_details_shop"
                        android:drawablePadding="8dp"
                        android:text="营业时间"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv5"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        android:text="08：30—23:00"
                        android:textColor="#ff666666"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img2"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_chat_call" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/rv1"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@id/img2"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_tag" />

                </RelativeLayout>
            </com.wujia.lib.widget.ShadowContainer>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="45dp"
                android:paddingTop="14dp"
                android:paddingRight="30dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/item_goods_card" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
