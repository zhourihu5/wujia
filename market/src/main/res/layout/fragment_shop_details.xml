<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px124"
        android:background="@color/cf7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back_nav"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px80"
            android:paddingRight="@dimen/px80"
            android:text="@string/back_my_service"
            android:textColor="@color/c8"
            android:textSize="@dimen/text24" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@id/btn1"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_download" />

        <ImageView
            android:id="@id/btn2"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_download" />

        <ImageView
            android:id="@id/btn3"
            android:layout_width="@dimen/px124"
            android:layout_height="match_parent"
            android:layout_marginRight="54dp"
            android:scaleType="center"
            android:src="@mipmap/ic_download" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@id/img1"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:background="@color/c9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="-180dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/bg_white_radius_shape"
                android:padding="31dp">


                <ImageView
                    android:id="@id/img2"
                    android:layout_width="170dp"
                    android:layout_height="145dp"
                    android:layout_marginRight="27dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:text="就三桌涮肉馆"
                    android:textColor="@color/c3"
                    android:textSize="27sp" />

                <LinearLayout
                    android:id="@id/l1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/img2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <RatingBar
                        android:id="@id/rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#F5A623"
                        android:rating="5" />

                    <TextView
                        android:id="@id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="¥100/人"
                        android:textColor="@color/c53"
                        android:textSize="17sp" />

                </LinearLayout>

                <TextView
                    android:id="@id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img2"
                    android:text="口味：9.1 环境：8.8 服务：9.0"
                    android:textColor="@color/c9"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv4"
                    android:layout_alignBottom="@id/img2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img2"
                    android:drawableLeft="@mipmap/arrow_right"
                    android:gravity="center"
                    android:text="草场地艺术区114号村委会西\n据您步行300米，需要5分钟"
                    android:textColor="@color/c53"
                    android:textSize="17sp" />

                <TextView
                    android:id="@id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="营业时间"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp" />

                <TextView
                    android:id="@id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:text="08：30—23:00"
                    android:textColor="#ff666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img2"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_head_default" />

                <android.support.v7.widget.RecyclerView
                    android:id="@id/rv1"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_below="@id/img2"
                    android:layout_marginTop="19dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_tag" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@id/rv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="53dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/item_goods_card" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
