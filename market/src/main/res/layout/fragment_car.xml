<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@id/toolbar"
        layout="@layout/layout_title" />

    <TextView
        android:id="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/bg_white_radius_shape"
        android:backgroundTint="@color/c5f"
        android:gravity="center"
        android:text="订单状态： 订单未支付，等待付款"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@id/l1"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/bg_white_radius_shape"
        android:orientation="vertical"
        android:paddingLeft="41dp"
        android:paddingTop="19dp"
        android:paddingRight="41dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/img1"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/bg_accent_circle_shape" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:text="每日优鲜"
                android:textColor="@color/c3"
                android:textSize="21sp" />

            <ImageView
                android:id="@id/btn1"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/bg_accent_circle_shape" />

            <ImageView
                android:id="@id/btn2"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/bg_accent_circle_shape" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@id/rv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_order_goods" />

    </LinearLayout>


    <!--right-->

    <RelativeLayout
        android:id="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_alignTop="@id/l1"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="53dp"
        android:layout_toRightOf="@id/l1"
        android:background="@drawable/bg_white_radius_shape"
        android:paddingLeft="35dp"
        android:paddingTop="25dp"
        android:paddingRight="29dp">

        <TextView
            android:id="@id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_address"
            android:textColor="@color/c3"
            android:textSize="19sp" />

        <TextView
            android:id="@id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv10"
            android:layout_marginTop="12dp"
            android:text="榴莲养乐多 13485959855"
            android:textColor="@color/c8"
            android:textSize="19sp" />

        <TextView
            android:id="@id/tv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv11"
            android:layout_marginTop="9dp"
            android:text="吾家社区一期3号楼3楼303室"
            android:textColor="@color/c3"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/icon_family_order_contacts" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:layout_alignLeft="@id/l2"
        android:layout_alignRight="@id/l2"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/l1"
        android:background="@drawable/bg_white_radius_shape"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingTop="35dp"
        android:paddingBottom="41dp">

        <TextView
            android:id="@id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_details"
            android:textColor="@color/c3"
            android:textSize="25sp" />

        <TextView
            android:id="@id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="已选购0件商品"
            android:textColor="@color/c8"
            android:textSize="19sp" />

        <TextView
            android:id="@id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="商品总额：¥206"
            android:textColor="@color/c8"
            android:textSize="19sp" />

        <TextView
            android:id="@id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="共有1积分，每500积分抵扣1.0元"
            android:textColor="@color/c8"
            android:textSize="19sp" />

        <com.wujia.lib.widget.MySwitch
            android:id="@+id/scene_in_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:checked="true"
            android:layout_marginRight="@dimen/px30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付总额："
                android:textColor="@color/c8"
                android:textSize="21sp" />

            <TextView
                android:id="@id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥206"
                android:textColor="@color/colorAccent"
                android:textSize="21sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="预计可获得206积分"
            android:textColor="@color/colorAccent"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/btn3"
            android:layout_width="263dp"
            android:layout_height="59dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/btn_rect_accent_select"
            android:gravity="center"
            android:text="@string/now_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/text29" />

    </LinearLayout>
</RelativeLayout>