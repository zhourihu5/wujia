<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--指定边框线条，需要显示线条的边设置为正值stroke 的width。-->
    <!--不显示的边设置为 负值 stroke 的width。-->
    <item>
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="-2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#1a000000" />
        </shape>
    </item>
</layer-list>