<?xml version="1.0" encoding="utf-8"?>
<com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborLeftView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/left_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="1dp">

        <com.jingxi.smartlife.pad.sdk.neighbor.ui.views.RoundImageView
            android:id="@+id/headImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:scaleType="centerCrop"
            android:transitionName="neighbor_head"
            app:borderColor="@color/transparent"
            app:borderOutsideColor="@color/transparent"
            app:borderThickness="@dimen/dp_0" />

        <TextView
            android:id="@+id/showName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/ff323232"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="小橘子小橘子" />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_below="@id/showName"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_movementCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/ff4483f8"
                    android:textSize="30sp"
                    tools:text="58" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_movementCount"
                    android:layout_centerHorizontal="true"
                    android:text="@string/neighborhoodMoments"
                    android:textColor="@color/ff919191"
                    android:textSize="16sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/left_rl_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_favourCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/ff4483f8"
                    android:textSize="30sp"
                    tools:text="58" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_favourCount"
                    android:layout_centerHorizontal="true"
                    android:text="@string/myFavorites"
                    android:textColor="@color/ff919191"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>


        <View
            android:id="@+id/neighbor_left_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/ll_count"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/color_gary_e9e9e9" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_22"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/re"
        android:layout_marginRight="@dimen/_dp_22"
        android:background="@color/greyf8" />

    <LinearLayout

        android:layout_width="@dimen/dp_22"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/re"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/re"
        android:layout_marginRight="@dimen/_dp_22"
        android:elevation="1dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greyf8" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_loadHttpFailed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/re"
        android:gravity="center"
        android:text="加载失败，点击重试"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/neighbor_detail_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        android:clipChildren="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/neighbor_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborLeftView>