<?xml version="1.0" encoding="utf-8"?>

<com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborhoodView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/neighborhood"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jingxi.smartlife.pad.sdk.neighbor.ui.views.SimpleSwipeRefreshLayout
        android:paddingStart="@dimen/dp_10"
        android:id="@+id/swipe_refresh"
        android:paddingEnd="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.jingxi.smartlife.pad.sdk.neighbor.ui.views.SimpleSwipeRefreshLayout>
    <TextView
        android:drawableTop="@mipmap/neighborboard_no_publish"
        android:visibility="gone"
        android:id="@+id/noContent"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_20"
        android:text="@string/no_one_published"
        android:textColor="@color/ff919191"
        android:textSize="@dimen/sp_20"
        android:layout_height="wrap_content"/>

</com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborhoodView>


