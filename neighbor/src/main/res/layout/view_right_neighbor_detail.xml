<?xml version="1.0" encoding="utf-8"?>
<com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborRightView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_nocontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_172"
        android:drawableTop="@mipmap/neighborboard_no_publish"
        android:gravity="center_horizontal"
        android:text="@string/no_published"
        android:textColor="@color/ff919191"
        android:textSize="@dimen/sp_20"
        android:visibility="gone" />

    <com.jingxi.smartlife.pad.sdk.neighbor.ui.views.NeighborSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/right_ll_bottom">

        <com.jingxi.smartlife.pad.sdk.neighbor.ui.views.HeaderLinearLayout
            android:id="@+id/scrollableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_neighborInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jingxi.smartlife.pad.sdk.neighbor.ui.views.RoundImageView
                        android:id="@+id/riv_neighborPic"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_32"
                        app:borderColor="@color/transparent"
                        tools:src="@mipmap/mrtx" />

                    <TextView
                        android:id="@+id/tv_neighborName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_42"
                        android:layout_toEndOf="@+id/riv_neighborPic"
                        android:textColor="@color/alpha_black"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_neighborDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_neighborName"
                        android:layout_below="@+id/tv_neighborName"
                        android:layout_marginTop="@dimen/dp_11"
                        android:textColor="@color/color_gary_999"
                        android:textSize="@dimen/sp_16"
                        tools:text="08-07 14:30" />

                    <ImageView
                        android:id="@+id/iv_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_29"
                        android:layout_marginTop="@dimen/dp_40"
                        android:src="@mipmap/neighbor_warning" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_neighborContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_84"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:maxLength="500"
                    android:textColor="@color/ff323232"
                    android:textSize="@dimen/sp_20"
                    tools:text="等你哦哭丧闹鬼那孔卡送给你看过你工农看够等你撒的no斯卡迪no卡萨丁纽卡斯你都卡死的内控adno卡萨丁你考四度呢卡的斯卡迪弄撒都困难啥都看那艘坑爹呐搜看你打死你卡丁咳嗽啊电脑卡三年的口岸" />

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_34"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_orginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_neighborPrice"
                        android:textColor="@color/color_gary_999"
                        android:textSize="@dimen/sp_16"
                        tools:text="原价￥100" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignEnd="@+id/tv_orginalPrice"
                        android:layout_alignStart="@+id/tv_orginalPrice"
                        android:layout_marginTop="@dimen/dp_18"
                        android:background="@color/color_gary_999" />

                    <TextView
                        android:id="@+id/tv_neighborPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/ffff0000"
                        android:textSize="@dimen/sp_24"
                        tools:text="75" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_neighborPrice"
                        android:layout_toStartOf="@+id/tv_neighborPrice"
                        android:text="@string/presentPrice_RMB"
                        android:textColor="@color/ffff0000"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_neighborImgList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_246"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_18"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_enroll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginEnd="@dimen/dp_29"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@drawable/shape_release_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_enrollEnd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_99ffffff"
                        android:gravity="center"
                        android:text="@string/enrollEnd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                    <RelativeLayout
                        android:id="@+id/rl_countdown"
                        android:layout_width="@dimen/dp_360"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_enrollSurplus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/enrollSurplus"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:id="@+id/tv_hour"
                            android:layout_width="@dimen/dp_39"
                            android:layout_height="@dimen/dp_25"
                            android:layout_below="@+id/tv_enrollSurplus"
                            android:layout_marginStart="@dimen/dp_70"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/shape_time_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/color_68a1ff"
                            android:textSize="@dimen/sp_20"
                            tools:text="15" />

                        <TextView
                            android:id="@+id/tv_hourTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_hour"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/tv_hour"
                            android:text="@string/hour"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:id="@+id/tv_min"
                            android:layout_width="@dimen/dp_39"
                            android:layout_height="@dimen/dp_25"
                            android:layout_below="@+id/tv_enrollSurplus"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toEndOf="@+id/tv_hourTitle"
                            android:background="@drawable/shape_time_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/color_68a1ff"
                            android:textSize="@dimen/sp_20"
                            tools:text="22" />

                        <TextView
                            android:id="@+id/tv_minTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_hour"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/tv_min"
                            android:text="@string/min"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:id="@+id/tv_sec"
                            android:layout_width="@dimen/dp_39"
                            android:layout_height="@dimen/dp_25"
                            android:layout_below="@+id/tv_enrollSurplus"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toEndOf="@+id/tv_minTitle"
                            android:background="@drawable/shape_time_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/color_68a1ff"
                            android:textSize="@dimen/sp_20"
                            tools:text="15" />

                        <TextView
                            android:id="@+id/tv_secTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_hour"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/tv_sec"
                            android:text="@string/sec"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_liner"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_72"
                        android:layout_toEndOf="@+id/rl_countdown"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_enrollNumber"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/view_liner"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        tools:text="报名人数 120" />

                    <View
                        android:id="@+id/view_liner2"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_72"
                        android:layout_toEndOf="@+id/tv_enrollNumber"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_enroll"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/view_liner2"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        tools:text="已报名" />

                    <View
                        android:id="@+id/view_whiteBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/view_liner2"
                        android:alpha="0.4"
                        android:background="@color/white" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_neighborType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_29"
                    app:cardCornerRadius="@dimen/dp_6"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_neighborType"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_26"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        tools:background="@color/color_ff4483f8"
                        tools:text="邻里闲聊" />
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view_liner3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginEnd="@dimen/dp_29"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/light_gary_bg" />

                <RelativeLayout
                    android:id="@+id/rl_comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:layout_marginEnd="@dimen/dp_29"
                    android:layout_marginStart="@dimen/dp_25">

                    <TextView
                        android:id="@+id/tv_commentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_30"
                        android:textColor="@color/ff323232"
                        android:textSize="@dimen/sp_18"
                        tools:text="评论108" />

                    <TextView
                        android:id="@+id/tv_enrollPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tv_commentCount"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_30"
                        android:textColor="@color/ff323232"
                        android:textSize="@dimen/sp_18"
                        tools:text="评论人数 108" />

                    <TextView
                        android:id="@+id/tv_praiseCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/ff919191"
                        android:textSize="@dimen/sp_18"
                        tools:text="赞 1120" />

                    <View
                        android:id="@+id/view_commentCount"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_5"
                        android:layout_below="@+id/tv_commentCount"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/color_ff8414"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_enrollPeople"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_5"
                        android:layout_below="@+id/tv_commentCount"
                        android:layout_marginStart="@dimen/dp_100"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_toEndOf="@+id/tv_commentCount"
                        android:background="@color/color_ff8414"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_noComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_25"
                    android:drawableTop="@mipmap/lib_no_comment"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_50"
                    android:text="@string/noComments"
                    android:textColor="@color/ff919191"
                    android:textSize="@dimen/sp_20"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_25"
                    android:visibility="visible" />

            </LinearLayout>
        </com.jingxi.smartlife.pad.sdk.neighbor.ui.views.HeaderLinearLayout>
    </com.jingxi.smartlife.pad.sdk.neighbor.ui.views.NeighborSwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_sendMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clickable="true"
        android:paddingEnd="@dimen/dp_17"
        android:paddingStart="@dimen/dp_23">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_centerVertical="true"
            android:background="@color/light_gary_bg"
            android:hint="@string/comment"
            android:imeActionLabel="@string/send"
            android:imeOptions="actionSend"
            android:paddingEnd="@dimen/dp_65"
            android:paddingStart="@dimen/dp_11" />

        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            tools:src="@mipmap/neighbor_praise_on" />

        <TextView
            android:id="@+id/tv_commit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/shape_release_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"
            android:paddingStart="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/comment"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13.3"
            android:visibility="gone" />
    </RelativeLayout>
</com.jingxi.smartlife.pad.sdk.neighbor.ui.widget.NeighborRightView>