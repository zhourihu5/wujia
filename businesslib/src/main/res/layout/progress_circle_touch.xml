<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/payment_process_bg"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_circle_progress">

        <com.abctime.businesslib.view.progress.CircleTouchProgress
            android:id="@+id/payment_main_process_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/process_finger_print_view"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_process_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="长按解锁"
        android:textColor="@color/clr_ffffff"
        android:textSize="20dp" />

</RelativeLayout>