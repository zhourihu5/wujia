<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="268dp"
    android:layout_height="480dp"
    android:background="@drawable/bg_white_radius_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/bg_circle_head_ripple_shape"
        android:padding="20dp">

        <ImageView
            android:id="@id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_head_default" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="吾家物业管理部"
        android:textColor="@color/c8"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="语音呼叫中..."
        android:textColor="@color/c3"
        android:textSize="21sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="无人接听？用手机拨打电话 \n010-47583920"
        android:textColor="@color/c8"
        android:textSize="13sp" />

    <ImageView
        android:id="@id/btn1"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="27dp"
        android:src="@drawable/bg_point_red" />
</LinearLayout>