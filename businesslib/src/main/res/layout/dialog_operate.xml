<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/op_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/dialog_top_closed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp"
        android:background="@mipmap/dialog_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_40"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/op_dialog_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="现在关注还有机会领取RAZ纸质绘本"
            android:textColor="#824414"
            android:textSize="@dimen/sp_17"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/op_dialog_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#AF8564"
                android:textSize="@dimen/sp_15"
                tools:text="关注微信公众号关注微信公" />

            <ImageView
                android:id="@+id/op_dialog_img"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_10" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/op_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/bg_alert_title"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="关注有礼"
        android:textColor="#fff"
        android:textSize="@dimen/sp_23"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/op_dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_ui_button"
        android:text="保存图片"
        android:textColor="@color/clr_ffffff"
        android:textSize="@dimen/sp_20" />


</FrameLayout>