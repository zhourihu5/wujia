<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px124"
    android:background="@color/cf7">

    <TextView
        android:id="@+id/layout_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/c3"
        android:textSize="@dimen/text28"
        tools:text="@string/setting" />

    <TextView
        android:id="@+id/layout_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/back_nav"
        android:drawablePadding="@dimen/px10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px80"
        android:paddingRight="@dimen/px80"
        android:text="@string/back"
        android:textColor="@color/c8"
        android:textSize="@dimen/text24"
        android:visibility="gone" />

    <TextView
        android:id="@+id/layout_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px80"
        android:paddingRight="@dimen/px80"
        android:text="@string/done"
        android:textColor="@color/c8"
        android:textSize="@dimen/text24"
        android:visibility="gone" />
</FrameLayout>