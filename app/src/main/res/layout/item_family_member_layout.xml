<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_member_set_item"
            android:layout_width="@dimen/px64"
            android:layout_height="@dimen/px64"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_head_default" />

        <TextView
            android:id="@+id/name_member_set_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px24"
            tools:text="13888888888"
            android:textColor="@color/c3"
            android:textSize="@dimen/text24" />

        <TextView
            android:id="@+id/status_member_set_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30"
            android:layout_weight="1"
            android:text="待接受邀请"
            android:visibility="gone"
            android:textColor="@color/c8"
            android:textSize="@dimen/text20" />


        <TextView
            android:id="@+id/desc_member_set_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px24"
            android:text="V1权限"
            android:visibility="gone"
            android:textSize="@dimen/text24" />

        <ImageView
            android:id="@+id/arrow_member_set_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/arrow_right" />


    </LinearLayout>

    <View style="@style/ItemLineStyle" />
</LinearLayout>