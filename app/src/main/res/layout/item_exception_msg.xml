<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px104"
    android:layout_marginTop="@dimen/px24"
    android:background="@drawable/bg_white_radius_left_yellow_shape"
    android:elevation="@dimen/px4"
    android:translationZ="@dimen/px2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/px32"
    android:layout_marginLeft="@dimen/px80"
    android:layout_marginRight="@dimen/px80"
    android:paddingRight="@dimen/px32">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/label_warning" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10"
        android:text="智能猫眼有异动"
        android:textColor="@color/c3"
        android:textSize="@dimen/text24" />

    <ImageView
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_marginLeft="@dimen/px20"
        android:background="@drawable/bg_point_red" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@mipmap/arrow_right"
        android:drawablePadding="@dimen/px20"
        android:gravity="right|center_vertical"
        android:text="11.18 15:32"
        android:textColor="@color/c8"
        android:textSize="@dimen/text20" />

</LinearLayout>