<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_dialog_contanier"
        android:layout_width="546dp"
        android:layout_height="292dp"
        android:layout_below="@+id/ll_dialog_top"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="@dimen/dp_25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center|top"
            android:lineSpacingMultiplier="1.2"
            android:minLines="1"
            android:textSize="@dimen/sp_15" />

        <View
            android:id="@+id/view_space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_dialog_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal" />

        <ProgressBar
            android:id="@+id/ll_dialog_progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ll_dialog_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_dialog_contanier"
        android:layout_alignRight="@id/ll_dialog_contanier"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20" />

    <ImageView
        android:id="@+id/iv_dialog_top_cloesed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_dialog_contanier"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-40dp"
        android:src="@mipmap/dialog_top_closed" />

</RelativeLayout>