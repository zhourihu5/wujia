<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_noconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/px20"
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retcode_default"
            android:textColor="@color/c9" />

        <TextView
            android:id="@+id/tv_refresh"
            android:paddingLeft="@dimen/px40"
            android:paddingRight="@dimen/px40"
            android:paddingBottom="@dimen/px8"
            android:paddingTop="@dimen/px8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_gravity="center"
            android:text="@string/kairu_lib_refresh"
            android:textColor="@color/white"
            android:background="@drawable/bg_content_net_error_shape"
            android:textSize="@dimen/text12" />
    </LinearLayout>
</FrameLayout>