<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.FamilyCameraActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/test_cramera" />

    <ImageView
        android:id="@id/img1"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px100"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/px48"
        android:background="@mipmap/btn_safe_quit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px48"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:background="@mipmap/btn_safe_open" />

        <ImageView
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px56"
            android:background="@mipmap/btn_safe_mute" />

        <ImageView
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px56"
            android:background="@mipmap/btn_safe_photo" />

    </LinearLayout>
</RelativeLayout>
