<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/equipment_img"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px120"
        android:scaleType="centerCrop"
        tools:src="@mipmap/icon_curtain" />

    <TextView
        android:id="@+id/equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px14"
        android:textColor="@color/c8"
        android:textSize="@dimen/text24"
        tools:text="@string/curtain" />

</LinearLayout>