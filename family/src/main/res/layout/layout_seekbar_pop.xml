<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px320"
    android:layout_height="@dimen/px328"
    android:background="@drawable/bg_white_radius_card">

    <com.wujia.lib.widget.ArcSeekBar
        android:id="@+id/pop_arc_seekbar"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px48"
        android:padding="@dimen/px15"
        app:arc_colors="@array/arc_colors_default"
        app:arc_max="100"
        app:arc_open_angle="80"
        app:arc_progress="80"
        app:arc_thumb_color="@color/black"
        app:arc_thumb_mode="FILL_STROKE"
        app:arc_thumb_radius="@dimen/px12"
        app:arc_thumb_width="@dimen/px2"
        app:arc_width="@dimen/px6" />

    <TextView
        android:id="@+id/pop_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px100"
        android:text="88%"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text32" />


    <TextView
        android:id="@+id/pop_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px10"
        android:text="@string/lighting_power"
        android:textColor="@color/c8"
        android:textSize="@dimen/text20" />

    <!--<com.wujia.lib.widget.MySwitch-->
    <!--android:id="@+id/pop_switch"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/scene_in_img"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_marginBottom="@dimen/px48"-->
    <!--/>-->

    <ImageView
        android:layout_width="@dimen/px40"
        android:layout_height="@dimen/px40"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/px10"
        android:scaleType="center"
        android:src="@mipmap/icon_smartcard_close" />
</RelativeLayout>